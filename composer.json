{
    "name": "apxcde/loan-amortization",
    "description": "PHP composer package for loan amortization",
    "keywords": [
        "apxcde",
        "loan-amortization"
    ],
    "homepage": "https://github.com/apxcde/loan-amortization",
    "license": "MIT",
    "authors": [
        {
            "name": "ApexCode",
            "email": "contact@apexcode.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Apxcde\\LoanAmortization\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Apxcde\\LoanAmortization\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
